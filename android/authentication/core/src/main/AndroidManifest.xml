<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="core.authentication">

    <!-- WIFI DIRECT -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- SEEK -->
    <uses-permission android:name="org.simalliance.openmobileapi.SMARTCARD" />

    <!-- KEY VERIFICATION -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <service
            android:name="core.authentication.trust.ManagerService"
            android:exported="false" />

        <service
            android:name="core.authentication.AuthenticationService"
            android:exported="true" />

        <service
            android:name="core.authentication.trust.TrustProtocolService"
            android:exported="false" />

        <!-- USER INTERACTION -->

        <activity
            android:name="core.authentication.keys.interaction.PinDialogActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <activity
            android:name="core.authentication.keys.interaction.NFCInitializationActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <service
            android:name="core.authentication.keys.interaction.KeyProtectionService"
            android:exported="false" />

        <activity
            android:name="core.authentication.keys.interaction.NFCActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <!-- KEY VERIFICATION -->

        <activity
            android:name="keyverifier.KeyVerifierActivity"
            android:exported="false" />

        <!-- NETWORK -->

        <service
            android:name="wifi.WifiP2pService"
            android:exported="true" />

        <receiver android:name="wifi.WifiP2pBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.p2p.STATE_CHANGED" />
                <action android:name="android.net.wifi.p2p.PEERS_CHANGED" />
                <action android:name="android.net.wifi.p2p.CONNECTION_STATE_CHANGE" />
                <action android:name="android.net.wifi.p2p.THIS_DEVICE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver android:name="core.authentication.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <!-- SEEK -->
        <uses-library android:name="org.simalliance.openmobileapi" android:required="false" />
    </application>

</manifest>
