<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.sampleapp">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="apps.sampleapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="apps.sampleapp.HandshakeReceiver">
            <intent-filter>
                <action android:name="core.authentication.trust.action.HANDSHAKE_FINISHED" />
                <action android:name="core.authentication.trust.action.HANDSHAKE_ERROR" />
            </intent-filter>
        </receiver>

        <receiver android:name="apps.sampleapp.SubKeySignatureReceiver">
            <intent-filter>
                <action android:name="core.authentication.trust.action.SUB_KEY_ISSUED" />
                <action android:name="core.authentication.trust.action.SUB_KEY_AVAILABLE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
